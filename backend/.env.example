# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000

# MongoDB Connection
# Use either remote (MongoDB Atlas) or local MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/familysphere?retryWrites=true&w=majority
# MONGO_URI=mongodb://127.0.0.1:27017/familysphere (for local development)

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (SMTP for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=FamilySphere <your_email@gmail.com>

# OTP Secret
OTP_SECRET=your_otp_secret_key_change_this
